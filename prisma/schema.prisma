generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model hazard {
  id               String @id@default(uuid())
  streetNumber     String 
  streetName       String
  city             String
  region           String
  type             String
  description      String
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}
